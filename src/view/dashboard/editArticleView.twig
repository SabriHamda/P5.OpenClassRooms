{% extends 'backendTemplate.twig' %}
{% block content %}
  <section class="dashboard-content animate-box fadeIn animated">
   {% include 'parts/menu.twig' %}
   <ol class="breadcrumb">
    <li><a href="index.php?action=dashboard">Dashboard</a></li>
    <li><a href="index.php?action=articles">Articles</a></li>
    <li class="active">Editer un article</li>

  </ol>
  <div class="container-fluid center">
    <div class="row" style="margin:auto;">
     <div class="widget-left col-md-2 color-grey">
      {% include('parts/quickView.twig') %}
      {% include('parts/profile.twig') %}
    </div>
    <div class="col-md-10 animate-box fadeInLeft animated" style="float:right">

      <div class="widget widget-right">

       <form id="form-article-update" method="post" action="" class="add-content-form" enctype="multipart/form-data">
        <div class="input-group"> 
         <span class="input-group-addon" id="basic-addon1"><i class="fas fa-hand-point-right"></i>&nbsp;

           Titre</span> 
           <input type="text" class="form-control" name="title-article-update" value="{{post.title}}" placeholder="Titre" aria-describedby="basic-addon1"> 

         </div>
         <br>
         <div class="input-groupe col-md-6 text-center" style="padding:10px;background-color:#fff;border:1px solid #ccc;height:400px;line-height:100px;">

           <label class="control-label"><i class="fas fa-image"></i>&nbsp; Modifier l'image mise en avant</label>

           <input type="file" class="filestyle" name="img-article-update" onchange="readURL(this);" style="margin-left:auto;margin-right:auto;">

         </div>
         <div class="input-groupe col-md-6 text-center" style="padding:10px;background-color:#fff;border:1px solid #ccc;height:400px;line-height:400px;">
          <img style="text-align:center;width:350px;" id="preview" src="{{ post.image }}" alt="image">
          <label id="dimensions"></label>
        </div>

        <div class="input-groupe">
          <label id="basic-addon1"><h4><i class="fab fa-pied-piper"></i>&nbsp; Contenu</h4></label>
         <textarea id="editable-content" name="content-article-update" class="form-control" rows="20" id="comment">{{ post.content }}</textarea>
       </div> 
       <br>
       <div class="input-groupe">
        <button id="submit-article-add" type="submit" name="submit-article-update" class="btn btn-default color-pirple">Modifier L'article</button>
      </div>




    </form>
  </div>

</div>
</div>
</div>
</section>
<script src="vendor/components/jquery/jquery.min.js"></script>
<script src="public/assets/js/jquery.easing.1.3.js"></script>
<script src="vendor/twbs/bootstrap/dist/js/bootstrap.min.js"></script>
<!--<script src="public/assets/js/jquery.waypoints.min.js"></script>-->
<!--<script src="public/assets/js/jquery.flexslider-min.js"></script>-->
<!--<script src="public/assets/js/main.js"></script>-->

<script type="text/javascript">
function readURL(input) {
  if (input.files && input.files[0]) {
    var reader = new FileReader();

    reader.onload = function (e) {
      $('#preview').attr('src', e.target.result);
     
    }

    reader.readAsDataURL(input.files[0]);
   
  }
 
}
</script>
{% endblock content %}