{% extends 'template.twig' %}
{% block content %}
<div id="fh5co-page">
	<a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle"><i></i></a>
{% include 'parts/menu.twig' %}
	<div id="fh5co-main">
		<div class="fh5co-narrow-content">
			<div class="row row-bottom-padded-md">
				<div class="col-md-6 animate-box" data-animate-effect="fadeInLeft">
					<img class="img-responsive" src="{{ post.image }}" alt="image" width="100%" height="100%">
				</div>
				<div class="col-md-6 animate-box" data-animate-effect="fadeInLeft">
					<h2 class="fh5co-heading">
						{{ post.title }}
						<br>
						<small>Cr√©e le {{ post.creation_date_fr }}</small></h2>
						<p>{{ post.content }}</p>
					</div>
				</div>
			</div>

			
			<div class="fh5co-narrow-content">
				<div class="row row-bottom-padded-md">



					<!-- ADD COMMENTS-->
					<div class="row">
							<h1>Commentaires</h1>
							<div class="col-md-4">
								
								<button id="btn-add-comment" type="button" class="btn btn-primary">Ajouter un commentaire</button>
							</div>
						</div>

					<div class="row row-bottom-padded-md animate-box fadeInLeft animated" data-animate-effect="fadeInLeft">

						
						<div id="form-add-comment" class="row" style="display: none; background-color:#2d3038;padding: 30px;">
						<form action="index.php?action=addComment&amp;id={{ post['id'] }}" method="post" >
							<div class="row">
								<div class="col-md-12">
									<div class="row">
										<div class="col-md-6" style="margin-top: 50px;">
											<div class="form-group form-check form-check-inline" style="height: 100px">
												<input class="form-check-input" type="radio" name="civility" id="inlineRadio1" value="man">
												<label class="form-check-label" for="inlineRadio1"><img src="public/assets/images/man.svg" width="64px" height="64px"></label>
												<label class="col-form-label">Je suis un homme</label>
											</div>
											<div class="form-group form-check form-check-inline" style="height: 100px">
												<input class="form-check-input" type="radio" name="civility" id="inlineRadio2" value="woman">
												<label class="form-check-label" for="inlineRadio2"><img src="public/assets/images/woman.svg" width="64px" height="64px"></label>
												<label class="col-form-label">Je suis une femme</label>
											</div>
											
											
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<input class="form-control" placeholder="Nom" name="author" type="text">
											</div>
											<div class="form-group">
												<textarea name="comment" id="message" cols="30" rows="7" class="form-control" placeholder="Commentaire"></textarea>
											</div>
											<div class="form-group">
												<input class="btn btn-primary btn-md" value="Commenter" type="submit">
											</div>
										</div>

									</div>
								</div>

							</div>
						</form>
					</div>
					</div>

					<!-- ADD COMMENTS END-->




					<!-- COMMENTS-->
					<div id="comments">
					{% for comments in comments %}
						
						{% if comments.civilite == "man" %} 
							{% set civility = "public/assets/images/man.svg" %}
						{% else %} 
							{% set civility = "public/assets/images/woman.svg" %}
						{% endif %}
						<div class="col-md-12" style="border-bottom:solid 1px #2d3038;padding-top: 30px; ">
							<div class="fh5co-feature animate-box fadeInLeft animated" data-animate-effect="fadeInLeft">
								<div class="fh5co-icon">
									<img class="align-self-start mr-3" src="{{ civility }}" alt="Generic placeholder image" width="100%" height="100%">
								</div>
								<div class="fh5co-text">
									<h3>{{ comments.author }}</h3>
									<small>Le : {{ comments.comment_date_fr }}</small>
									<p>{{ comments.comment | nl2br }}</p>
								</div>
							</div>
						</div>

					{% endfor %}
</div>
				</div>
			</div>
		</div>
	</div>
	<!-- jQuery -->
	<script src="vendor/components/jquery/jquery.min.js"></script>
	<!-- jQuery Easing -->
	<script src="public/assets/js/jquery.easing.1.3.js"></script>
	<!-- Bootstrap -->
	<script src="vendor/twbs/bootstrap/dist/js/bootstrap.min.js"></script>
	<!-- Waypoints -->
	<script src="public/assets/js/jquery.waypoints.min.js"></script>
	<!-- Flexslider -->
	<script src="public/assets/js/jquery.flexslider-min.js"></script>
	
	
	<!-- MAIN JS -->
	<script src="public/assets/js/main.js"></script>
	<script type="text/javascript">
		$(document).ready(function() {
			$('#btn-add-comment').click(function(){
				$('#form-add-comment').toggle(400);
			});
			
		});
	</script>
	{% endblock %}

	